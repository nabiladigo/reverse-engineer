<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <section class="hero is-medium has-background-light">
        <div class="hero-body">
            <p class="title">All artist</p>
        </div>
    </section>
    <main class="container is-max-widescreen">
        <div class="columns is-multiline p-5">
            <% for(let idx=0; idx < artists.length; idx++){ %>
                <% const artist=artists[idx] %>
            
                    <div class="column is-one-third">
                        <article class="card">
                            <section class="card-image">
                                <figure class="image is-3by3">
                                    <img src="<%= artist.Image[2] %>" alt="Placeholder image" />
                                </figure>
                    </div>
                    </section>
                    <div class="card-content">
                        <div class="content">
                            <h3>
                                <a href="/artists/<%= artist._id %>">
                                    <%= artist.Name %>
                                </a>
                            </h3>
            
                        </div>
                    </div>
                    </article>
                    </div>
                    <% } %>
                        </div>
                        </main>
</body>
</html>
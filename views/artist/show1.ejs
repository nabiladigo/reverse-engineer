    <!DOCTYPE html>
    <html lang="en">
        <%- include ('../partials/head.ejs', {page: 'Artist' }) %>
        
        This is my nav bar now
        <%- include ('../partials/nav.ejs') %>

        <section class="hero is-medium has-background-light">
        <div class="hero-body">
            <h1 class="title">artist Show Page</h1>
        </div>
        </section>

        <div class="container is-max-widescreen p-5">
            <div class="columns is-multiline p-5">
                
                
                <div class="column is-one-third">
                    <article class="card">
                        <%for(let idx=0; idx< artist.Image.length; idx++){%>
                            <% const image = artist.Image[idx]%>
                        <section class="card-image">
                            <figure class="image is-3by3">
                                <img src="<%= artist.Image[idx] %>" alt="Placeholder image" />
                            </figure>
                        </div>
                    </section>
                    <% } %>
                    <div class="card-content">
                        <div class="content">
                            <h3>Name: <%= artist.Name %></h3>
                            <small>Artist: $<%= artist.Artist %></small>
                            <small>Mediums: $<%= artist.Mediums %></small>
                            <small>Date: $<%= artist.Date %></small>
                    
                            <div class="field mt-5 is-grouped">
                                 <div class="control">
                                    <a class="button is-info" href="/artists/<%= artist._id %>/edit">Edit artist
                                    </a>
                                </div>
                                <p class="control">
                                    <form action="/artists/<%= artist._id %>?_method=DELETE" method="POST">
                                        <input class="button is-danger" type="submit" value="Delete artist"/>                    
                                    </form>
                                </p>
                            </div>
                        </div>
                
                    </div>
                <!-- <% } %> -->
        </div>   
    </body>
    </html> 